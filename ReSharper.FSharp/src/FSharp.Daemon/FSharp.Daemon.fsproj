<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net451</TargetFramework>
    <DebugType>full</DebugType>
    <DisableImplicitFSharpCoreReference>true</DisableImplicitFSharpCoreReference>
    <RootNamespace>JetBrains.ReSharper.Plugins.FSharp.Daemon</RootNamespace>
    <AssemblyName>JetBrains.ReSharper.Plugins.FSharp.Daemon</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="src\Highlightings\ErrorHighlightings.fs" />
    <Compile Include="src\Stages\ErrorsStageProcessBase.fs" />
    <Compile Include="src\Stages\FSharpDaemonBehaviour.fs" />
    <Compile Include="src\Stages\SyntaxErrorsStage.fs" />
    <Compile Include="src\Stages\TypeCheckErrorsStage.fs" />
    <Compile Include="src\UsageChecking\FSharpUsageCheckingService.fs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="FSharp.Core" Version="4.0.*" />
    <PackageReference Include="JetBrains.FSharp.Compiler.Service" Version="14.0.6" />
    <PackageReference Include="JetBrains.Rider.SDK" Version="$(RiderSDKVersion)" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Daemon.FSharp\Daemon.FSharp.csproj" />
    <ProjectReference Include="..\Psi.Fsharp\Psi.FSharp.csproj" />
  </ItemGroup>
</Project>